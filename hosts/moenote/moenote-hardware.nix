    { device = "/dev/disk/by-uuid/97e48a17-ced3-4b1b-a3ba-4aa4d00d95e5";
      fsType = "ext4";
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/40A2-38A3";
      fsType = "vfat";
      options = [ "fmask=0077" "dmask=0077" ];
    };

  swapDevices = [ ];

